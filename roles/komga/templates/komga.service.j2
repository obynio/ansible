[Unit]
Description=Komga
After=network.target

[Service]
User={{ komga_user_name }}
Group={{ komga_group_name }}
Type=simple
KillMode=process
WorkingDirectory={{ komga_user_home }}
ExecStart=/usr/bin/env java -jar komga-{{ komga_version }}.jar
Restart=on-failure
RestartSec=3

[Install]
WantedBy=multi-user.target
