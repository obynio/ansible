[Unit]
Description=Calibre
After=network.target

[Service]
Type=simple
User={{ calibre_user_name }}
Group=srv
WorkingDirectory={{ calibre_user_home }}
ExecStart={{ calibre_user_home }}/venv/bin/python3 {{ calibre_user_home }}/cps.py
Restart=on-failure
RestartSec=3

[Install]
WantedBy=multi-user.target
